# Database URL (if using external database)
# DATABASE_URL=postgresql://username:password@localhost:5432/jpg2png

# Google reCAPTCHA Keys (for contact form protection)
# Get these from https://www.google.com/recaptcha/admin
RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Google Analytics / GA4 Tracking ID
# Get this from https://analytics.google.com/
GA_TRACKING_ID=G-XXXXXXXXXX

# Google AdSense Publisher ID (after approval)
# Get this from https://www.google.com/adsense/
ADSENSE_PUBLISHER_ID=pub-XXXXXXXXXXXXXXXXX

# Email Configuration (for contact form notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@jpg2png-clone.com

# Rate Limiting Configuration
MAX_CONVERSIONS_PER_HOUR=50
RATE_LIMIT_WINDOW_HOURS=1

# File Upload Limits
MAX_FILE_SIZE_MB=15
UPLOAD_DIR=uploads

# Cleanup Schedule
FILE_CLEANUP_INTERVAL_MINUTES=30
FILE_RETENTION_HOURS=1

# Production Settings
NODE_ENV=development
PORT=5000

# Security
# SESSION_SECRET=your-long-random-session-secret-here

# External Services
# CDN_URL=https://your-cdn-domain.com
# REDIS_URL=redis://localhost:6379 (for production rate limiting)
